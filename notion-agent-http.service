[Unit]
Description=Notion Personal Agent HTTP Server
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/notion-personal-agent
Environment=PYTHONUNBUFFERED=1
ExecStart=/root/notion-personal-agent/.venv/bin/uvicorn src.http_server:app --host 0.0.0.0 --port 8080
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
